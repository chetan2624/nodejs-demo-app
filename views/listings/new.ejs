<% layout("/layouts/boilerpate")%>
<br>
<div class="row mt-3">
    <div class="col-8 offset-2">

<h3>Create a New Listing</h3>
<body>
    <form action="/listings" method="post" novalidate class="needs-validation">
        <div class="md-3">
        <label for="title" class="form-label">Title</label>
     <input type="text" placeholder="Add a catcy title" name="listing[title]" class="form-control" required>
     <div class="valid-feedback">
      Title looks good!
      </div>
    </div>
       
    <div class="md-3">
       <label for="description" class="form-label">Description</label>
       <textarea name="listing[description]" placeholder="" class="form-control" required></textarea>
       <div class="invalid-feedback">
        please enter a short description
       </div>
       
    </div>
  <div class="md-3">
    <label for="image" class="form-label">Image-link</label>
      <input type="text" placeholder="enter your image-url" name="listing[image]" class="form-control">
    </div>

    <!-- price -->
    <div class="row">
 <div class="md-3 col-md-4">
        <label for="price" class="form-label" >Price</label>
     <input type="text" placeholder="1200" name="listing[price]" class="form-control" required>
     <div class="invalid-feedback">
       Price should be vaild
       </div>
    </div>


    <div class="md-3 col-md-8">
        <label for="country" class="form-label">Country</label>
         <input type="text" placeholder="India" name="listing[country]" class="form-control" required>
         <div class="invalid-feedback">
            Country should be vaild
            </div>
        </div>
   
</div>

    <div class="md-3"  >
       <label for="location" class="form-label">Location</label>
       <input type="text" placeholder="Jaipur ,Rajasthan " name="listing[location]" class="form-control" required>
       <div class="invalid-feedback">
       Location should be vaild
        </div>
    </div>
   
    
        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form> 
    <br>
</body>
</div>
</div>
